<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="showDoMilhao.PerguntasPage"
             Shell.NavBarIsVisible="false"
             BackgroundColor="Black">


       <Grid>
              <Grid.RowDefinitions>
                     <RowDefinition Height="*"/>
                     <RowDefinition Height="100"/>
                     <RowDefinition Height="70"/>
                     <RowDefinition Height="70"/>
                     <RowDefinition Height="70"/>
                     <RowDefinition Height="70"/>
                     <RowDefinition Height="70"/>
                     <RowDefinition Height="100"/>
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
              </Grid.ColumnDefinitions>

              <Image
                     x:Name="FundoImg"
                     Source="imgfundo.png"
                     Opacity=".8"
                     Aspect="Fill"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Grid.RowSpan="8"
                     Grid.ColumnSpan="3"/>


              <Frame
                     BackgroundColor="#77000000"
                     Grid.Row="0"
                     Grid.ColumnSpan="3"
                     Margin="5">

                     <Label
                            x:Name="labelPergunta"
                            Text="Teste "
                            FontFamily="Times New Romance-Bold-Italic"
                            TextColor="White"
                            FontSize="26"/>
              </Frame>
              
                        <Label
                            x:Name="LpPontuacao"
                            Text="R$ 0"
                            Margin="10,20,0,0"
                            FontFamily="LetraDeRelogio"
                            TextColor="White"
                            FontSize="30"
                            Grid.Row="1"
                            Grid.ColumnSpan="2"/>
                            
                            <Label
                            x:Name="LpNivelAtual"
                            Text="Nivel:0"
                            Margin="10,20,0,0"
                            TextColor="White"
                            FontSize="30"
                            Grid.Row="1"
                            Grid.Column="1"/>

              <Button x:Name="buttonResposta01"
                      Clicked="OnbuttonResposta01"
                      Text="A-"
                      BackgroundColor="#77000000"
                      TextColor="White"
                      Margin="5"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      Grid.Row="2"
                      Grid.ColumnSpan="3"/>

              <Button x:Name="buttonResposta02"
                      Clicked="OnbuttonResposta02"
                      Text="B-"
                      BackgroundColor="#77000000"
                      TextColor="White"
                      Margin="5"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      Grid.Row="3"
                      Grid.ColumnSpan="3"/>

              <Button x:Name="buttonResposta03"
                      Clicked="OnbuttonResposta03"
                      Text="C-"
                      BackgroundColor="#77000000"
                      TextColor="White"
                      Margin="5"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      Grid.Row="4"
                      Grid.ColumnSpan="3"/>

              <Button x:Name="buttonResposta04"
                      Clicked="OnbuttonResposta04"
                      Text="D-"
                      BackgroundColor="#77000000"
                      TextColor="White"
                      Margin="5"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      Grid.Row="5"
                      Grid.ColumnSpan="3"/>

              <Button x:Name="buttonResposta05"
                      Clicked="OnbuttonResposta05"
                      Text="E-"
                      BackgroundColor="#77000000"
                      TextColor="White"
                      Margin="5"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      Grid.Row="6"
                      Grid.ColumnSpan="3"/>

              <Button x:Name="Ajuda1"
                      Text="k"
                      Clicked="OnButtonHelp"
                      FontFamily="FontCard"
                      Padding="-10"
                      FontSize="60"
                      BackgroundColor="#77000000"
                      TextColor="White"
                      Margin="40,15,40,15"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      Grid.Row="7"
                      Grid.Column="0"/>

              <Button x:Name="Ajuda2"
                      Text="K"
                      FontFamily="Animal"
                      FontSize="60"
                      Clicked="OnButtonHelp2"
                      BackgroundColor="#77000000"
                      TextColor="White"
                      Margin="40,15,40,15"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      Grid.Row="7"
                      Grid.Column="1"/>

              <Button x:Name="Ajuda3"
                      Text="T"
                      Clicked="OnButtonHelp3"
                      FontSize="60"
                      FontFamily="Animal"
                      BackgroundColor="#77000000"
                      TextColor="White"
                      Margin="40,15,40,15"
                      HorizontalOptions="FillAndExpand"
                      VerticalOptions="FillAndExpand"
                      Grid.Row="7"
                      Grid.Column="2"/>


       </Grid>

</ContentPage>